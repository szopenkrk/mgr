<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="{{asset('css/style.css')}}" media="screen"/>
        <link rel="stylesheet" href="{{asset('css/print.css')}}" media="print"/>
    </head>
    <body>
        <div id="container">
        <div class="baner"><img src="{{asset('images/head.jpg')}}"></div>
                <div class="menu">
                    <ul>
                        <li><a href="{{ path('url_panel') }}">Panel</a></li>
                        <li><a href="{{ path('url_autor') }}">Autor</a></li>
                        <li><a href="{{ path('url_editor') }}">Edytor</a></li>
                        <li><a href="{{ path('url_rewiever') }}">Rewiever</a></li>
                        <li><a href="{{ path('url_users') }}">Użytkownicy</a></li>
                        <li><a href="{{ path('url_work') }}">Prace</a></li>
                        <li><a href="profile">Twój profilu</a></li>
                        <li><a href="profile/edit">Edycja profilu</a></li>
                        <li><a href="logout">Wyloguj</a></li>
                        <li><a href="register">REJESTRACJA</a></li>
                    </ul>
                </div>
        <div class="login">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                <a href="{{ path('fos_user_registration_register') }}">Zarejestruj</a>
            {% endif %}
        </div>

        {% for key, message in app.session.getFlashes() %}
        <div class="{{ key }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
        {% endfor %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        </div>
    </body>
</html>
